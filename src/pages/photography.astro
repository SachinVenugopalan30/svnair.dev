---
import Layout from '../layouts/Layout.astro';
import PageTransition from '../components/PageTransition';
import PhotoGallery from '../components/PhotoGallery';
import { getAllPhotos } from '../utils/photoLoader';
import { config } from '../config';

// Get all photos at build time
const allPhotos = await getAllPhotos();
---

<Layout title="Photography - Sachin" description="Capturing life's beautiful moments through the lens. A showcase of my photography work featuring daily rotating selections.">
  <PageTransition client:load>
    <!-- Hero Section -->
    <section class="relative pt-20 sm:pt-28 lg:pt-32 pb-8 px-4 sm:px-6 lg:px-8 min-h-screen flex items-center justify-center">
      <div class="max-w-6xl mx-auto text-center">
        <div class="space-y-8">
          <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold leading-tight">
            <span class="block bg-gradient-to-r from-ivory via-ash-gray to-air-superiority-blue bg-clip-text text-transparent">
              Photography
            </span>
          </h1>

          <p class="text-xl sm:text-2xl text-text-secondary max-w-4xl mx-auto leading-relaxed">
            Capturing life's beautiful moments through the lens. Each image tells a story,
            preserving memories and emotions that transcend time.
          </p>

          <div class="flex justify-center items-center gap-4 p-6 glass rounded-2xl max-w-md mx-auto">
            <div class="w-12 h-12 bg-gradient-to-r from-scarlet to-ash-gray rounded-full flex items-center justify-center animate-pulse">
              <svg class="w-6 h-6 text-ivory" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="text-left">
              <p class="text-scarlet font-semibold">Visual Storytelling</p>
              <p class="text-text-secondary text-sm">Through light, composition, and emotion</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Floating camera elements -->
      <div class="absolute top-20 left-10 w-4 h-4 bg-scarlet rounded-full animate-bounce opacity-60"></div>
      <div class="absolute top-32 right-16 w-3 h-3 bg-ash-gray rounded-full animate-pulse"></div>
      <div class="absolute bottom-32 left-20 w-5 h-5 bg-air-superiority-blue rounded-full animate-float"></div>
    </section>

    <!-- Gallery Section -->
    <section class="py-12 px-4 sm:px-6 lg:px-8">
      <div class="max-w-6xl mx-auto">
        <div class="glass rounded-2xl p-6 lg:p-8">
          <div class="text-center mb-12">
            <h2 class="text-4xl sm:text-5xl font-bold text-ivory mb-4">
              Daily Featured Photos
            </h2>
            <p class="text-lg text-text-secondary max-w-3xl mx-auto">
              A curated selection of 6 photos, refreshed daily at midnight UTC. Each day brings a new view of the world through my lens.
            </p>
          </div>

          <!-- Photo Gallery -->
          <PhotoGallery allPhotos={allPhotos} client:load />

          <!-- Instagram Button -->
          <div class="text-center mt-12">
            <a
              href={config.socialMedia.instagram}
              target="_blank"
              rel="noopener noreferrer"
              class="btn-primary inline-flex items-center gap-3 group"
              style="background: linear-gradient(135deg, #FF3A20 0%, #e6341c 100%); color: #ffffff; border: none; padding: 16px 32px; border-radius: 12px; font-weight: 600; font-size: 16px; text-decoration: none; display: inline-flex; align-items: center; justify-content: center; gap: 8px; box-shadow: 0 4px 15px rgba(255, 58, 32, 0.3); min-height: 48px; transition: all 0.3s ease;"
            >
              <svg class="w-6 h-6 group-hover:scale-110 transition-transform duration-300" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
              </svg>
              <span>See More on Instagram</span>
              <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </a>
          </div>
        </div>
      </div>
    </section>
  </PageTransition>
</Layout>

<style>
  @keyframes float {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  .animate-float {
    animation: float 3s ease-in-out infinite;
  }
</style>
